@page "/CompanyType"
@using BSM.Shared
@inject HttpClient Http
@using System.Data
@using BSM.Shared.Model;



<div class="rifgt-sec">
    <div class="pageheader"><h4>Company Type</h4></div>

    <div class="rifgt-sec1 ccd">
        <div class="mainh">

            <div class="row align-items-center">
                <div class="col-md-4">
                    <label for="exampleFormControlTextarea78d" class="form-label">Company Type Name</label>
                    <input type="text" @bind="cmpnyname" class="form-control" />

                </div>
                <div class="col-md-4 btntop">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" @onclick="saveData">Save</button>
                </div>
            </div>

        </div>


        <div class="row clearfix g-3">
            <div class="top-nav-search">
                <form>
                    <input type="text" class="form-control" placeholder="Search here">
                    <button class="btn" type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>
            <div class="col-sm-12">
                <div class="card mb-3">
                    <div class="card-body">
                        @if (companyList == null)
                        {
                            <p style="color:red"><em>No Record Found</em></p>
                        }
                        else
                        {
                            <div class="table-responsive" style="max-height: 60vh;">
                                <table id="myProjectTable" class="table table-hover1 align-middle mb-0" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>Company Type Name</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (companyList != null)
                                        {
                                            int j = 1;
                                            @foreach (DataRow dr in companyList.Rows)
                                            {

                                                <tr>
                                                    <td>@j</td>
                                                    <td>@dr["typename"].ToString()</td>
                                                    <td>
                                                        <a class="actionbtn" alt="Edit"><i class="far fa-edit"></i></a>
                                                        <a class="actionbtn" alt="Delete"><i class="far fa-trash-alt"></i></a>
                                                    </td>
                                                </tr>
                                                j++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@code {
    @inject NavigationManager NavigationManager;


    private DataTable companyList;


    protected override async Task OnInitializedAsync()
    {
        var response = await Http.GetFromJsonAsync<CommonResponse>("api/Master/showCompanyType");

        companyList = Newtonsoft.Json.JsonConvert.DeserializeObject<DataTable>(response.responseValue.ToString());
    }


    string cmpnyname;
    public async Task saveData()
    {
        var obj = new
        {
            name = cmpnyname,

        };
        System.Net.Http.HttpResponseMessage response = await Http.PostAsJsonAsync<dynamic>("api/Master/insertCompanyType", obj);

        var result = response.Content.ReadFromJsonAsync<CommonResponse>().Result;
        if (result.status == 1)
        {
            //mssg = "Save Sucessfully";
            // NavigationManager.NavigateTo("CompanyType", true);

            <div class="toatr">
                <div class="toatr-inner">

                    <div class="toast alert-success toast-reg1" data-autohide="false">
                        <div class="toast-header bg-success text-white">
                            <strong class="mr-auto"><i class="fa fa-check" aria-hidden="true"></i></strong>
                            <button type="button" class="ml-2 mb-1 close text-white" data-dismiss="toast"><i class="fa fa-times" aria-hidden="true"></i></button>
                        </div>
                        <div class="toast-body">Your document has submitted succesfully!!</div>
                    </div>

                    <div class="toast alert-warning toast-reg1" data-autohide="false">
                        <div class="toast-header bg-warning text-white">
                            <strong class="mr-auto"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i></strong>
                            <button type="button" class="ml-2 mb-1 close text-white" data-dismiss="toast"><i class="fa fa-times" aria-hidden="true"></i></button>
                        </div>
                        <div class="toast-body">Please Select Proper Input Please Select !!</div>
                    </div>


                    <div class="toast alert-danger toast-reg1" data-autohide="false">
                        <div class="toast-header  bg-danger text-white">
                            <strong class="mr-auto"><i class="fa fa-exclamation" aria-hidden="true"></i></strong>
                            <button type="button" class="ml-2 mb-1 close text-white" data-dismiss="toast"><i class="fa fa-times" aria-hidden="true"></i></button>
                        </div>
                        <div class="toast-body">This document have a problem Error Err!!</div>
                    </div>

                </div>



            </div>

            return;
        }

    }


}
